{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "typeRoots": [
      "./dist/index.d.ts"
    ],
    "esModuleInterop": true,
  },
  "include": [
    "src",
    "index.ts",
    "@lastfm-viewer/utils/lastfm.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}